<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Antartic Republic Communications Beacon", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Messages", "Messages", "Home", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <img src="https://lh6.googleusercontent.com/VcM47kYbKYcpR4a4uTUroS7Nwqgudqmeaseb9KGTJ-He6t_pyNot0Q38-TUb31nW2n5lOEeV7Vh1QbhIL2tE20OKQx1W4R37ZefDY0vDsjJXq_toZBIPDtAgtaGUC9w_=s1600" style="width: 150px; width: 150px" title="Death to Santa." />
        @RenderBody()
        <div id="footer">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Joseph Griffin/Slyther</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
